}

<h2>View</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.customerID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.customerID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.firstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.lastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.phoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.notes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.notes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.totalPurchaseAmount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.totalPurchaseAmount)
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Create New", "Create", "Address", new { customerId = Model.customerID },null)
</div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th class="text-center" scope="col">Address Line</th>
            <th class="text-center" scope="col">Address Line 2</th>
            <th class="text-center" scope="col">Address Type</th>
            <th class="text-center" scope="col">City</th>
            <th class="text-center" scope="col">State</th>
            <th class="text-center" scope="col">Country</th>
            <th class="text-center" scope="col">Postal Code</th>
            <th class="text-center" scope="col"><i class="glyphicon glyphicon-pencil" aria-hidden="true"></i></th>
            <th class="text-center" scope="col"><i class="glyphicon glyphicon-minus" aria-hidden="true"></i></th>
        </tr>
    </thead>
    @foreach (var item in ViewBag.CustomerAddresses)
    {
        <tr class="text-center">
            <td>
                @item.AddressLine
            </td>

            <td>
                @item.AddressLine2
            </td>

            <td>
                @item.AddressType
            </td>

            <td>
                @item.City
            </td>
            <td>
                @item.PostalCode
            </td>
            <td>
                @item.State
            </td>
            <td>
                @item.Country
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Address", new { addressId = item.AddressID }, null) |
                @Html.ActionLink("Details", "Details", "Address", new { addressId = item.AddressID }, null) |
                @Html.ActionLink("Delete", "Delete", "Address", new { addressId = item.AddressID }, null)
            </td>
        </tr>
    }
</table>
